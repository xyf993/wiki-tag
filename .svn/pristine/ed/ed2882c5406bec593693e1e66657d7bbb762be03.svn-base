@import 'parser:layout.less';
.w-tag {
    background: #f5f5f5;
    .large-layout {
        min-width: 1280px;
        position: relative;
        .layout {
            width: 1180px;
        }
    }
}

#browser-width-adaptions {
    .w-small() {
        .sidebar_btn {
            margin-left: @cmn-width_small-page / 2 + 15;
        }
    }
    .w-large() {
        .sidebar_btn {
            margin-left: @cmn-width_large-page / 2 + 15;
        }
    }
}

.header-wrapper {
    background: #fff;
    position: relative;
    .header {
        position: relative;
        border-bottom: 2px solid #52a3f5;
        .layout {
            position: relative;
            padding: 18px 0;
            .userbar-container {
                position: relative;
                top: 20px;
            }
        }
    }
}

.bg_img_wrap {
    height: 460px;
    width: 100%;
    position: absolute;
    overflow: hidden;
    &.bg_brand_wrap {
        background: #333;
    }
    img {
        position: absolute;
        width: 100%;
        height: 460px;
    }
}

.category-wrapper {
    padding: 30px 0;
    min-width: @cmn-width_small-page;
}

.waterFall-container {
    position: relative;
}

.memory-wrapper {
    padding: 15px 0;
    min-width: @cmn-width_small-page;
}

.about-wrapper {
    padding: 50px 0;
    min-width: @cmn-width_small-page;
}

a:link {
    text-decoration: none;
}

a:visited {
    text-decoration: none;
}

a:hover {
    text-decoration: none;
}

a:active {
    text-decoration: none;
}

body.w-tag-lemma {
    background: #fff;
    .category-wrapper {
        padding: 20px 0;
        min-width: @cmn-width_small-page;
    }
    .layout {
        width: 1080px;
    }
    .category-container,
    .waterFall-container {
        width: 1080px;
    }
}

