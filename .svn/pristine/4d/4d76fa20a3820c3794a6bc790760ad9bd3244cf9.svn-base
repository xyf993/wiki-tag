.header_main{
	a{
		text-decoration:none;
		outline:none;
		color: #fff;
	}

	.viewport{
		margin-left: 0;
		overflow: hidden;
		position: relative;
		.button {
		  position: absolute;
		  text-align: center;
		  font-size: 30px;
		  text-align: center;
		  cursor: pointer;
		  font-family: arial;
          color: #fff;
		  background-color: #000;
		  .cmn-opacity(0);
		  -webkit-transition: all .3s; /* Safari å’Œ Chrome */
			-moz-transition: all .3s; /* Firefox 4 */
			-ms-transition: all .3s; /*  IE10 */
			-o-transition: all .3s; /* Opera */
			transition: all .3s;
		}
		&:hover{
			.button{
				.cmn-opacity(0.3);
			  &:hover{
			  	.cmn-opacity(0.6);
			  }
				-webkie-transform:none;
				-moz-transform:none;
				-ms-transform:none;
				-o-transform:none;
				transform:none;
			}
		}
		.category{
			background-color: #fff;
			float: left;
			position: relative;
			.category_content{
				float: left;
				display: inline-block;
				&.category_content_hover{
					.category_wrap{
						top: -12px;
						.category_des{
							.cmn-opacity(1);
						}
					}
				}
			}
			.category_box{		
				position: relative;
				left: 0px;
			}
			.category_wrap{
				position: relative;
				overflow: hidden;
				top: 0px;
				.cmn-transition(top 0.2s ease-in-out 0.1s);
				.cmn-linear-gradient(top, transparent, rgba(0,0,0,0.3) 20%, rgba(0,0,0,0.6););
				.category_tit{
					font-size: 20px;
					height: 30px;
				}
				.category_des{
					font-size: 14px;
					color: #f5f5f5;
					.cmn-opacity(0);
					.cmn-transition(opacity 0.6s);
					.category_des_detail{
						float: left;
						overflow:hidden;
						text-overflow:ellipsis;
						white-space:nowrap;
					}
				}
			}
		  img{
		  	position: relative;
		  	display: block;
		  }
		}
	}

	.clear{
		clear: both;
	}
}