#sidebar{
  .sidebar_btn{
    .cmn-transition(0.2s);
    position: fixed;
    display: block;
    _display: none;
    width: 50px;
    height: 50px;
    left: 50%;
    border-radius: 2px;
    background: #000;
    .cmn-opacity(0.3);
    color: #FFF;
    font-size: 30px;
    text-align: center;
    text-decoration: none;
    &:hover{
      .cmn-opacity(0.4);
    }
    em{
      vertical-align: middle;
    }
  }
  #toTop{
    bottom: 80px;
    &.top-arrived{
      display: none;
    }
  }
  #feedback{
    bottom: 20px;
    span{
      display: none;
      font-size: 14px;
      padding: 10px;
      line-height: 16px;
    }
    &:hover{
      .wiki-tag-icons_feedback{
        display: none;
      }
      span{
        display: block;
      }
    }
  }
}  